{
  "name": "compet-int",
  "version": "1.0.0",
  "private": true,
  "description": "Competitive Intelligence SaaS for Francophone African Startups",
  "workspaces": [
    "frontend",
    "backend",
    "workers",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev:frontend & npm run dev:backend & npm run dev:workers",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:workers": "npm run dev --workspace=workers",
    "build": "npm run build --workspaces",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "clean": "rm -rf node_modules frontend/node_modules backend/node_modules workers/node_modules packages/*/node_modules"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "@types/node": "^20.10.5",
    "prettier": "^3.1.1",
    "eslint": "^8.56.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
